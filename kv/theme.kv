#:import dp kivy.metrics.dp
#:import FocusBehavior kivy.uix.behaviors.focus

# Card clicável com ripple (garante on_release funcionando)
<ClickableCard@ButtonBehavior+MDCard>:
    ripple_behavior: True

# Botão inferior (estilo do Figma: preto arredondado)
<BottomBlackButton@ButtonBehavior+MDCard>:
    size_hint_x: 1
    size_hint_y: None
    height: dp(56)
    md_bg_color: 0.05, 0.05, 0.05, 1
    radius: [16, 16, 16, 16]
    ripple_behavior: True

<JogamosTextField@MDTextField>:
    size_hint_y: None
    height: dp(56)
    mode: "rectangle"
    helper_text_mode: "on_error"
    multiline: False
    write_tab: False
    line_color_focus: 0.117, 0.227, 0.996, 1
    text_color: 0.07, 0.07, 0.07, 1
    radius: [16,16,16,16] # cantos com 16px nos inputs

# Botão azul primário – MESMA LARGURA E ALTURA DOS INPUTS
<JogamosPrimaryButton@FocusBehavior+MDRaisedButton>:
    size_hint_y: None
    size_hint_x: 1         # ⬅️ ocupa toda a largura da coluna
    height: dp(56)         # ⬅️ mesma altura do input
    md_bg_color: 0.117, 0.227, 0.996, 1
    text_color: 1, 1, 1, 1
    radius: [16,16,16,16] # cantos com 16px nos inputs

# Botão social preto – MESMA LARGURA E ALTURA DOS INPUTS
<JogamosSocialButton@MDRaisedButton>:
    size_hint_y: None
    size_hint_x: 1         # ⬅️ ocupa toda a largura da coluna
    height: dp(56)         # ⬅️ mesma altura do input
    md_bg_color: 0.07, 0.07, 0.07, 1
    text_color: 1, 1, 1, 1

<DividerWithText@MDBoxLayout>:
    text: "ou"
    orientation: "horizontal"
    size_hint_y: None
    height: dp(28)
    padding: dp(12), 0
    spacing: dp(12)
    MDSeparator:
        height: dp(1)
    MDLabel:
        text: root.text
        halign: "center"
        theme_text_color: "Secondary"
        size_hint_x: None
        width: dp(40)
    MDSeparator:
        height: dp(1)

# Botão focável usado nas outras telas – mantém consistência
<FocusPrimaryButton@FocusBehavior+MDRaisedButton>:
    size_hint_y: None
    size_hint_x: 1
    height: dp(56)
    md_bg_color: 0.117, 0.227, 0.996, 1
    text_color: 1, 1, 1, 1

# ------------------------
# Títulos e textos sutis
# ------------------------
<Headline@MDLabel>:
    font_style: "H5"
    halign: "left"

<Subtle@MDLabel>:
    theme_text_color: "Secondary"
    font_size: "13sp"
    halign: "left"

# ------------------------
# Campo de texto padrão (usado em Signup/Forgot/Verify)
# Mantém o mesmo foco azul do tema “Jogamos”
# ------------------------
<AuthTextField@MDTextField>:
    size_hint_y: None
    height: dp(56)
    mode: "rectangle"
    helper_text_mode: "on_error"
    multiline: False
    write_tab: False
    line_color_focus: 0.117, 0.227, 0.996, 1
    text_color: 0.07, 0.07, 0.07, 1

<FocusCardButton@FocusBehavior+MDCard>:
    size_hint_y: None
    size_hint_x: 1
    height: dp(56)
    md_bg_color: 0.117, 0.227, 0.996, 1    # azul (pode ajustar)
    radius: [16, 16, 16, 16]
    ripple_behavior: True
    # opcional: pequeno realce quando focado via TAB
    on_focus:
        setattr(self, "md_bg_color", (0.10, 0.20, 0.88, 1)) if self.focus else setattr(self, "md_bg_color", (0.117, 0.227, 0.996, 1))


# Card clicável com ripple (MRO corrigido: MDCard + ButtonBehavior)
<ClickableCard@MDCard+ButtonBehavior>:
    ripple_behavior: True

# Botão inferior (estilo Figma: preto arredondado) - também MRO corrigido
<BottomBlackButton@MDCard+ButtonBehavior>:
    size_hint_x: 1
    size_hint_y: None
    height: dp(56)
    md_bg_color: 0.05, 0.05, 0.05, 1
    radius: [16, 16, 16, 16]
    ripple_behavior: True