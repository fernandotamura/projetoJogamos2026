# ====== TOKENS LOGIN ======
#:import dp kivymd.material_resources.dp
#:import FocusBehavior kivy.uix.behaviors.focus.FocusBehavior

# ------------------------
# Títulos e textos sutis (usados em Login/Signup/Forgot/Verify)
# ------------------------
<Headline@MDLabel>:
    font_style: "Title"   # MD3
    role: "medium"        # ajuste 'large' ou 'small' se quiser maior/menor
    halign: "left"

<Subtle@MDLabel>:
    theme_text_color: "Secondary"
    font_size: "13sp"
    halign: "left"

<JogamosTextField>:
    size_hint_y: None
    height: dp(56)
    mode: "outlined"         # ou "filled", se preferir
    multiline: False

    # Subwidgets MD3 (anatomia correta no KivyMD 2.x)
    MDTextFieldHintText:
        text: root.hint_text if hasattr(root, "hint_text") else ""
    MDTextFieldHelperText:
        text: root.helper_text if hasattr(root, "helper_text") else ""
        mode: "persistent"

    # Ícones (opcionais — use quando precisar)
    # MDTextFieldLeadingIcon:
    #     icon: "account"
    # MDTextFieldTrailingIcon:
    #     icon: "information"


<LoginMaxWidthBox@MDBoxLayout>:
    size_hint_x: None
    width: min(root.parent.width - dp(40) if root.parent else dp(390), dp(390))  # troque 390->360 se seu Figma for 360
    size_hint_y: None
    height: self.minimum_height
    padding: dp(20)
    spacing: dp(16)


# Card “container” (se quiser fundo branco com sombra atrás de tudo)
<LoginCard@MDCard>:
    size_hint_x: 1
    size_hint_y: None
    height: self.minimum_height
    radius: [24, 24, 24, 24]
    padding: dp(20)
    elevation: 0         # no mock parece sem card — deixe 0; suba p/ 2..6 se quiser sombra
    md_bg_color: 1, 1, 1, 0

# Título e subtítulo
<LoginTitle@MDLabel>:
    font_style: "Title"
    role: "large"
    halign: "left"
    size_hint_y: None
    height: self.texture_size[1]

<LoginSubtitle@MDLabel>:
    theme_text_color: "Secondary"
    font_size: "13sp"
    halign: "left"
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]

# BOTÃO AZUL (Login) — 56dp, radius 24, sombra

<LoginCtaButton@FocusBehavior+MDButton>:
    size_hint_y: None
    height: dp(56)
    size_hint_x: 1
    style: "filled"
    md_bg_color: 0.039, 0.220, 1.0, 1     # #0A38FF
    text_color: 1, 1, 1, 1
    radius: [24, 24, 24, 24]
    elevation: 4



# BOTÃO SOCIAL PRETO — 56dp, radius 24, sombra
<SocialBlackButton@MDCard+ButtonBehavior>:
    size_hint_y: None
    size_hint_x: 1
    height: dp(56)
    radius: [24, 24, 24, 24]
    md_bg_color: 0.07, 0.07, 0.07, 1      # preto ~#121212
    elevation: 3
    ripple_behavior: True

# Separador “ou”
<DividerWithTextThin@MDBoxLayout>:
    text: "ou"
    orientation: "horizontal"
    size_hint_y: None
    height: dp(28)
    padding: dp(12), 0
    spacing: dp(12)
    MDDivider:
        height: dp(1)
    MDLabel:
        text: root.text
        halign: "center"
        theme_text_color: "Secondary"
        size_hint_x: None
        width: dp(40)
    MDDivider:
        height: dp(1)