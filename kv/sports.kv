#:import dp kivy.metrics.dp
<ChooseSportsScreen>:
    name: "choose_sports"
    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Escolha seus esportes"
        ScrollView:
            MDBoxLayout:
                id: lista_esportes
                orientation: "vertical"
                adaptive_height: True
        MDBoxLayout:
            padding: "16dp"
            adaptive_height: True
            MDButton:
                style: "filled"
                on_release: root.confirmar_escolhas()
                MDButtonText:
                    text: "Confirmar"
